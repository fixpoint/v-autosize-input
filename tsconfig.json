    "module": "esnext",
    "target": "es5",
    "moduleResolution": "node",
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "importHelpers": true,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "dist/types",
